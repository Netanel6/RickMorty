<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

        <variable
            name="model"
            type="com.netanel.rickmorty.gernericRecyclerView.model.CharacterModel" />
        <variable
            name="listener"
            type="com.netanel.rickmorty.gernericRecyclerView.model.CharacterModel.ClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="224dp"
        android:layout_height="240dp"
        android:layout_margin="12dp"
        android:background="@color/black"
        android:onClick="@{() -> listener.onClick(model.character) }"
        android:focusable="false">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{model.character.name}"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Rick Sanchez" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginVertical="8dp"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            app:civ_border_overlay="false"
            app:civ_border_width="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            bind:civ_border_color="@{model.getBorderColor}"
            bind:imageUrl="@{model.character.image}"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            app:layout_constraintEnd_toStartOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/species_image"
                bind:srcImg="@{model.getSpeciesImg}"
                tools:src="@drawable/ic_human" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/gender_image"
                bind:srcImg="@{model.getGenderImg}"
                tools:src="@drawable/ic_male" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>